#include<stdio.h>
#include<stdlib.h>
int main()
{
    printf("Enter 2 real values\n");
    float x,y,res;
    scanf("%f%f",&x,&y);
    if ((x>0)&&(y>0))
    {
        res=x+y;
    }
    else if((x<0)&&(y<0))
    {
        res=x+y;
    }
    else
    {
        res=x-y;
    }
    printf("the result is %f",res);
    return 0;
}
