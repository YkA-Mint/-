#include <stdio.h>
#include <stdlib.h>

int main()
{
    char text[10];
    int num_char;
    printf("Enter a text");
    scanf("%c",&text[0]);
    num_char=0;
    while ((text[num_char]!='\n') && (num_char<9))
    {
        num_char=num_char+1;
        scanf("%c",&text[num_char]);
    }
    text[num_char]='\0';
    printf("\n%s",text);
    return 0;
}
